{
    "clangd.fallbackFlags": [
        "-flto=thin",
        "-finline-functions",
        "-fuse-ld=lld",
        "-I${workspaceFolder}/include",
        "-pedantic-errors",
        "-std=c++2a",
        "-stdlib=libc++",
        "-Wall",
        "-Weffc++",
        "-Wextra",
        "-Wsign-conversion"
    ],
    "code-runner.executorMap": {
        "cpp": "project=$dirWithoutTrailingSlash && mkdir -p $workspaceRoot/build && clang++ -std=c++2a -stdlib=libc++ -fuse-ld=lld -flto=thin -finline-functions -Wall -Weffc++ -Wextra -Wsign-conversion -pedantic-errors -pipe -glldb -O2 -o $workspaceRoot/bin/${project##*/}.app $dirWithoutTrailingSlash/*.cpp -I$workspaceRoot/include -L$workspaceRoot/lib -lassimp -ldl -lfreetype -lglad -lglfw3 -lpthread -lzlibstatic"
    },
    "editor.bracketPairColorization.enabled": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.insertSpaces": false,
    "editor.mouseWheelZoom": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.tabSize": 2,
    "extensions.ignoreRecommendations": true,
    "files.autoGuessEncoding": true,
    "files.trimTrailingWhitespace": true,
    "launch": {
        "version": "0.2.0",
        "configurations": [
            {
                "type": "lldb",
                "request": "launch",
                "name": "Debug",
                "program": "${workspaceFolder}/bin/${input:project}.app",
                "args": [],
                "cwd": "${workspaceFolder}"
            }
        ],
        "inputs": [
            {
                "type": "promptString",
                "id": "project",
                "description": "Enter a program name you want to run here.",
                "default": "${relativeFileDirname}"
            }
        ]
    }
}